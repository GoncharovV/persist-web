{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "ESNext", 
    "moduleResolution": "bundler",
    "jsx": "react-jsx",                             
    "rootDir": "./libs",                                  
    "allowJs": false,                                  
    "declaration": true,                              
    "declarationMap": false,                           
    "sourceMap": false,                                
    "outDir": "./dist",                                   
    "removeComments": false,                           
    "noEmitOnError": true,                            
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                            
    "strictNullChecks": true,                         
    "alwaysStrict": true,
    "skipLibCheck": true,
  },
  "include": ["libs/**/*.ts"]
}
